<h1>Categorias de Notícias</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="10%">#</th>
      <th>Nome</th>
      <th width="15%">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @category_news.each do |category_news| %>
      <tr>
        <td><%= category_news.id %></td>
        <td><%= category_news.name %></td>
        <td><%= link_to 'Editar', edit_admin_category_news_path(category_news), class: "btn btn-default" %>
        <%= link_to 'Excluir', admin_category_news_path(category_news), class: "btn btn-danger", method: :delete, data: { confirm: 'Confirma Exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<span class='glyphicon glyphicon-plus'> Cadastrar Categoria</span>".html_safe, new_admin_category_news_path, class: "btn-sm btn-success" %>
